# Environment variables for Patreon Downloader

# Time zone for container
TZ=America/New_York

# User/Group IDs for proper file permissions in CasaOS
PUID=1000
PGID=1000

# Ensures Python output is unbuffered for better logging
PYTHONUNBUFFERED=1

# Optional: Uncomment to define a custom schedule for downloads (cron format)
# CRON_SCHEDULE="0 */6 * * *"

# Optional: Uncomment to change logging verbosity
# LOG_LEVEL=INFO

# Optional: Uncomment to automatically update yt-dlp on container start
# AUTO_UPDATE_YTDLP=true
